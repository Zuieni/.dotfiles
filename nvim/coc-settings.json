{
    "languageserver": {
        "golang": {
            "command": "gopls",
            "args": [],
            "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
            "filetypes": ["go"]
        },
        "godot": {
            "host": "127.0.0.1",
            "filetypes": ["gd", "gdscript3"],
            "port": 6008
        },
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh"],
            "ignoredRootPaths": ["~"]
        }
    },
    "snippets.ultisnips.directories": [
        "UltiSnips",
        "gosnippets/UltiSnips"
    ],
    "snippets.userSnippetsDirectory": "$VIMCONFIG/ultisnips",
    "suggest.snippetIndicator": " â–º",
    "diagnostic.enable": false,
    "coc.preferences.formatOnSaveFiletypes": ["go"],
    "coc.preferences.hoverTarget": "float",

    "html.format.enable": true
}
